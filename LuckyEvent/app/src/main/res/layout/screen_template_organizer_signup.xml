<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_gradient">

        <ImageView
            android:id="@+id/previousIcon"
            android:layout_width="45dp"
            android:layout_height="47dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:contentDescription=""
            android:focusable="true"
            android:src="@drawable/arrow_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraintLayout_body" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/inter_bold"
            android:text="Organizer Sign up"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/previousIcon" />

        <EditText
            android:id="@+id/SignUpUsernameInput"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:hint="Username"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#605E5E"
            android:textColorHint="#605E5E"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <LinearLayout
            android:id="@+id/SignUpUsernameBar"
            android:layout_width="242dp"
            android:layout_height="5dp"
            android:background="#605E5E"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/SignUpUsernameInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpUsernameInput" />

        <EditText
            android:id="@+id/SignUpPasswordInput"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Password"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#605E5E"
            android:textColorHint="#605E5E"
            android:textSize="20sp"
            android:inputType="textWebPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpUsernameInput" />

        <LinearLayout
            android:id="@+id/SignUpPasswordBar"
            android:layout_width="242dp"
            android:layout_height="5dp"
            android:background="#605E5E"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpPasswordInput" />

        <EditText
            android:id="@+id/SignUpFirstNameInput"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="First Name"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#605E5E"
            android:textColorHint="#605E5E"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpPasswordBar" />

        <LinearLayout
            android:id="@+id/SignUpFirstNameBar"
            android:layout_width="242dp"
            android:layout_height="5dp"
            android:background="#605E5E"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpFirstNameInput" />

        <EditText
            android:id="@+id/SignUpLastNameInput"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#605E5E"
            android:textColorHint="#605E5E"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpFirstNameBar" />

        <LinearLayout
            android:id="@+id/SignUpLastNameBar"
            android:layout_width="242dp"
            android:layout_height="5dp"
            android:background="#605E5E"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpLastNameInput" />

        <EditText
            android:id="@+id/SignUpFacilityNameInput"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:hint="Facility Name"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#605E5E"
            android:textColorHint="#605E5E"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpLastNameBar" />

        <LinearLayout
            android:id="@+id/SignUpOrganizationNameBar"
            android:layout_width="242dp"
            android:layout_height="5dp"
            android:background="#605E5E"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpFacilityNameInput" />

        <EditText
            android:id="@+id/SignUpFacilityCodeInput"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:hint="Facility Code"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#605E5E"
            android:textColorHint="#605E5E"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpOrganizationNameBar" />

        <LinearLayout
            android:id="@+id/SignUpFacilityCodeBar"
            android:layout_width="242dp"
            android:layout_height="5dp"
            android:background="#605E5E"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpFacilityCodeInput" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SignUpButton"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/round_button"
            android:paddingVertical="18dp"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textColorLink="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUpFacilityCodeBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
