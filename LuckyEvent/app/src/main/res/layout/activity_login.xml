<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingTop="10dp"
    android:elevation="4dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rmk761e4yfi"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:layout_marginBottom="70dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Login"
        android:fontFamily="@font/roboto_medium"/>

    <EditText
        android:id="@+id/r63rrjogjw1l"
        android:textColor="#605E5E"
        android:textSize="20sp"
        android:layout_marginLeft="59dp"
        android:layout_marginRight="59dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Username"
        android:textColorHint="#605E5E"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="text"
        android:fontFamily="@font/roboto_medium"/>

    <LinearLayout
        android:id="@+id/ru8d3tqq1an"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#605E5E"
        android:layout_marginBottom="28dp"
        android:layout_marginHorizontal="59dp"
        android:orientation="vertical"/>

    <EditText
        android:id="@+id/rcapbbz7gdul"
        android:layout_marginLeft="59dp"
        android:layout_marginRight="59dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColorHint="#605E5E"
        android:hint="Password"
        android:textColor="#605E5E"
        android:textSize="20sp"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="textWebPassword"
        android:fontFamily="@font/roboto_medium"/>

    <LinearLayout
        android:id="@+id/rnqs3w0ypapk"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#605E5E"
        android:layout_marginBottom="81dp"
        android:layout_marginHorizontal="59dp"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/r04nwgdi2lflr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="39dp"
        android:layout_marginHorizontal="42dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ro3l6zckuuxc"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/regpuqfpxt9j"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingVertical="18dp"
                android:text="Sign in"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/rd4piu837f8d"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/rsv9rcd9dhq"
                android:text="Sign up"
                android:textColor="#000000"
                android:textSize="20sp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="18dp"
                android:elevation="4dp"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/rd03ys6q17jt"
        android:textColor="#DDDDDD"
        android:textSize="20sp"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Or"
        android:fontFamily="@font/roboto_medium"/>

    <TextView
        android:id="@+id/risuxof0rqa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Sign in as guest"
        android:textColor="#DDDDDD"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_medium"/>

    <TextView
        android:id="@+id/rmqwyrag0qwk"
        android:textColor="#DDDDDD"
        android:textSize="20sp"
        android:layout_marginBottom="24dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Or"
        android:fontFamily="@font/roboto_medium"/>

    <TextView
        android:id="@+id/organizer"
        android:textColor="#DDDDDD"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Sign in/Sign up as Organizer"
        android:fontFamily="@font/roboto_medium"/>

</LinearLayout>

